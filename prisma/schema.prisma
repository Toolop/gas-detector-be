// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @unique
  username    String        @unique
  email       String
  password    String
  name        String
  role        RolesOnUser[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime?     @updatedAt
  RoomandUser RoomOnUser[]
}

model Role {
  id        Int           @id @unique
  name      String
  user      RolesOnUser[]
  createdAt DateTime      @default(now())
  updatedAt DateTime?     @updatedAt
}

model RolesOnUser {
  user   User @relation(fields: [userId], references: [id])
  userId Int
  role   Role @relation(fields: [roleId], references: [id])
  roleId Int

  @@id([userId, roleId])
}

model Room {
  id         Int          @id @unique
  name       String
  createdAt  DateTime     @default(now())
  updatedAt  DateTime?    @updatedAt
  RoomOnUser RoomOnUser[]
}

model RoomOnUser {
  User   User @relation(fields: [userId], references: [id])
  userId Int
  Role   Room @relation(fields: [roomId], references: [id])
  roomId Int

  @@id([userId, roomId])
}

model Sensor {
  id           Int           @id @unique
  name         String
  calibration  String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime?     @updatedAt
  SensorType   SensorType?   @relation(fields: [sensorTypeId], references: [id])
  SensorValue  SensorValue[]
  sensorTypeId Int?
}

model SensorType {
  id        Int       @id @unique
  name      String
  Sensor    Sensor[]
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}

model SensorValue {
  id        Int      @id @unique
  value     String
  createdAt DateTime @default(now())
  Sensor    Sensor?  @relation(fields: [sensorId], references: [id])
  sensorId  Int?
}

model Condition {
  id        Int       @id @unique
  set_point Int
  type      Int
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}
